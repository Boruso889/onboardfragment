<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.screens.SecondScreen">


    <TextView
        android:id="@+id/tvDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:text="Вы быстро узнаете о результатах"
        android:textColor="#939396"
        app:layout_constraintBottom_toTopOf="@+id/ivUzhas2"
        app:layout_constraintEnd_toEndOf="@+id/ivUzhas2"
        app:layout_constraintStart_toStartOf="@+id/ivUzhas2" />

    <ImageView
        android:id="@+id/ivUzhas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        android:src="@drawable/ic_shot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvGreen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:text="Уведомления"
        android:textColor="#00B712"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDesc2"
        app:layout_constraintEnd_toEndOf="@+id/tvDesc2"
        app:layout_constraintStart_toStartOf="@+id/tvDesc2" />

    <ImageView
        android:id="@+id/ivDots2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_group2"
        app:layout_constraintEnd_toEndOf="@+id/tvDesc2"
        app:layout_constraintStart_toStartOf="@+id/tvDesc2"
        app:layout_constraintTop_toBottomOf="@+id/tvDesc2" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:text="Пропустить"
        android:textColor="#57A9FF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>